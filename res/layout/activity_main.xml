<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/buttom_bar_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:background="@color/white">

        <RelativeLayout style="@style/ButtomBar" >
           <!-- 主页 -->
            <ImageButton
                android:id="@+id/buttom_home"
                style="@style/ButtomBarImgBtn"
                android:src="@drawable/home_green"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <RelativeLayout style="@style/ButtomBar" >
           <!-- 书架 -->
            <ImageButton
                android:id="@+id/buttom_book"
                style="@style/ButtomBarImgBtn"
                android:src="@drawable/book_green"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
        
        <RelativeLayout style="@style/ButtomBar" >
           <!-- 圈子 -->
            <ImageButton
                android:id="@+id/buttom_cicle"
                style="@style/ButtomBarImgBtn"
                android:src="@drawable/circle_green"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
        
        <RelativeLayout style="@style/ButtomBar" >
           <!-- 我绘 -->
            <ImageButton
                android:id="@+id/buttom_mine"
                style="@style/ButtomBarImgBtn"
                android:src="@drawable/mine_green"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
    </LinearLayout>
    
    

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/buttom_bar_group"
        android:background="@color/devide_line" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line" 
       />

</RelativeLayout>