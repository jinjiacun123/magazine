<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@android:color/transparent"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/action_bar_height"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="15.0sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/downloadedMagazineNumTv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="0本"
        android:drawableLeft="@drawable/action_mode_icon_downloaded"
        android:layout_weight="1.0" />
    <TextView android:textSize="15.0sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/downloadingMagazineNumTv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="0本"
        android:drawableLeft="@drawable/action_mode_icon_downloading"
        android:layout_weight="1.0" />
    <TextView android:textSize="15.0sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/downloadedMagazineSizeTv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="0M"
        android:drawableLeft="@drawable/action_mode_icon_sdcard"
        android:layout_weight="1.0" />
</LinearLayout>
